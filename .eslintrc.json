{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": ["import", "node", "promise"],
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "space-before-function-paren": ["error", "never"]
  }
}
